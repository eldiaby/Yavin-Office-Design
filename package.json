{
  "name": "yavin",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "devserver": "live-server --browser=firefox",
    "sass:watch": "sass ./sass/style.scss ./css/style.css --no-source-map --watch",
    "watch:pug": "pug ./pug/article.pug ./pug/index.pug --out ./ -w -P",
    "start": "npm-run-all --parallel devserver sass:watch watch:pug compress:js",
    "build:html": "npm-run-all build:pug create:dist minify:html",
    "build:pug": "pug ./pug/index.pug ./pug/article.pug --out ./",
    "minify:html": "html-minifier-terser ./index.html  --output ./dist/index.html --collapse-whitespace --remove-comments --minify-js true --minify-css true && html-minifier-terser ./article.html --output ./dist/article.html --collapse-whitespace --remove-comments --minify-js true --minify-css true",
    "create:dist": "mkdirp ./dist ./dist/css ./dist/js ./dist/images ./dist/webfonts",
    "build:css": "npm-run-all sass:build prefix:css compress:sass",
    "sass:build": "sass sass/style.scss css/style.comp.css --no-source-map",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' ./css/style.comp.css -o ./css/style.prefix.css",
    "compress:sass": "sass ./css/style.prefix.css ./css/style.css --style=compressed --no-source-map",
    "compress:js": "terser ./js/bootstrap.min.js ./js/script.js -o ./js/script.min.js --compress",
    "build:js": "terser ./js/bootstrap.min.js ./js/script.js -o ./js/script.min.js --compress",
    "clean:dist": "rimraf ./dist",
    "copy:css": "cp ./css/style.css ./dist/css/style.css",
    "copy:js": "cp ./js/script.min.js ./dist/js/script.min.js",
    "copy:images": "cp -r ./images/* ./dist/images",
    "copy:webfonts": "cp -r ./webfonts/* ./dist/webfonts",
    "build:project": "npm-run-all clean:dist create:dist build:css copy:css build:js copy:js build:html copy:images copy:webfonts"
  },
  "keywords": [
    "office furniture",
    "interior design",
    "e-commerce",
    "store",
    "consultation",
    "modern office",
    "furniture design",
    "responsive design",
    "web development",
    "SEO",
    "sass",
    "bootstrap"
  ],
  "author": "Eldiaby Hosny",
  "license": "ISC",
  "description": "Yavin is an online store for office furniture and interior design consultation services.",
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "autoprefixer": "^10.4.21",
    "bootstrap": "^5.3.3",
    "chokidar-cli": "^3.0.0",
    "html-minifier-terser": "^7.2.0",
    "live-server": "^1.2.2",
    "mkdirp": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^11.0.1",
    "pug": "^3.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^6.0.1",
    "sass": "^1.86.0",
    "terser": "^5.39.0"
  },
  "browserslist": [
    "last 10 versions",
    "> 1%",
    "maintained node versions",
    "not dead"
  ]
}
